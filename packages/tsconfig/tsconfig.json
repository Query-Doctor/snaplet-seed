{
  "extends": [
    "@tsconfig/strictest",
    "@tsconfig/node18"
  ],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "customConditions": [
      "development"
    ],
    "strictNullChecks": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noEmit": false,
  },
  "exclude": [
    "**/dist/*"
  ]
}